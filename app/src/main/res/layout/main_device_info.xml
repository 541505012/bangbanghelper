<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">
    <!--标题栏-->
    <com.mero.wyt_register.widget.CustomTitleBar
        android:id="@+id/title_bar_device_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text="参数修改"
        app:textSize="20sp"
        app:textColor="#FFF">
    </com.mero.wyt_register.widget.CustomTitleBar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            android:background="#FFFFFF">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <Button
                    android:id="@+id/device_info_random_btn"
                    android:background="@drawable/button_shape"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="随机生成"
                    android:layout_gravity="center"/>
                <Button
                    android:id="@+id/btn_device_info_save"
                    android:background="@drawable/button_shape"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="保存"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <!--分割线-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:hint="@null"
                android:background="#F5F5F5"/>
            <LinearLayout
                android:id="@+id/layout_resolution_item"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tx_resolution"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="分辨率"
                    android:gravity="center"
                    android:textColor="#000000"/>
                <EditText
                    android:id="@+id/edt_resolution"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text=""
                    android:hint="@null"
                    android:background="@null"
                    android:gravity="center"
                    android:maxLines="1"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:hint="@null"
                android:background="#F5F5F5"/>
            <LinearLayout
                android:id="@+id/layout_imei_item"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tx_IMEI"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="Android_ID"
                    android:gravity="center"
                    android:textColor="#000000"/>
                <EditText
                    android:id="@+id/edt_IMEI"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text=""
                    android:textColor="#dd000000"
                    android:hint="@null"
                    android:background="@null"
                    android:gravity="center"
                    android:maxLines="1"/>
            </LinearLayout>
            <!--分割线-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:hint="@null"
                android:background="#F5F5F5"/>
            <LinearLayout
