            <LinearLayout
                android:id="@+id/layout_ssid_item"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tx_ssid"
                    android:layout_width="100dp"
