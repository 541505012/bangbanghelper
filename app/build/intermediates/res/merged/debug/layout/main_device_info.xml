<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical">
    <!--标题栏-->
    <com.mero.wyt_register.widget.CustomTitleBar
        android:id="@+id/title_bar_device_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text="设备信息"
        app:textSize="20sp"
        app:textColor="#FFF">
    </com.mero.wyt_register.widget.CustomTitleBar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            android:background="#FFFFFF">
            <!--分割线-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:hint="@null"
                android:background="#F5F5F5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tx_sim_xulie_num"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="SIM卡序列号"
                    android:gravity="center"
                    android:textColor="#000000"/>
                <EditText
                    android:id="@+id/edt_sim_xulie_num"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text=""
                    android:hint="SIM卡序列号"
                    android:background="@null"
                    android:gravity="center"
                    android:maxLines="1"/>
            </LinearLayout>
            <!--分割线-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f5f5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tx_IMEI"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="IMEI"
                    android:gravity="center"
                    android:textColor="#000000"/>
                <EditText
                    android:id="@+id/edt_IMEI"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text=""
                    android:hint="IMEI"
                    android:background="@null"
                    android:gravity="center"
                    android:maxLines="1"/>
            </LinearLayout>
            <!--分割线-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f5f5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tx_IMSI"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="IMSI"
                    android:gravity="center"
                    android:textColor="#000000"/>
                <EditText
                    android:id="@+id/edt_IMSI"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text=""
                    android:hint="IMSI"
                    android:background="@null"
                    android:gravity="center"
                    android:maxLines="1"/>
            </LinearLayout>
            <!--分割线-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f5f5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tx_phone"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="手机号码"
                    android:gravity="center"
                    android:textColor="#000000"/>
                <EditText
                    android:id="@+id/edt_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:hint="手机号码"
                    android:gravity="center"
                    android:background="@null"
                    android:maxLines="1"/>
            </LinearLayout>
            <!--分割线-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f5f5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tx_phone_country"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="手机卡国家"
                    android:gravity="center"
                    android:textColor="#000000"/>
                <EditText
                    android:id="@+id/edt_phone_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:hint="手机卡国家"
                    android:background="@null"
                    android:gravity="center"
                    android:maxLines="1"/>
            </LinearLayout>
            <!--分割线-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f5f5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tx_yunyingshang_code"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="运营商"
                    android:gravity="center"
                    android:textColor="#000000"/>
                <EditText
                    android:id="@+id/edt_yuunyingshang_code"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text=""
                    android:background="@null"
                    android:gravity="center"
                    android:hint="运营商"/>
            </LinearLayout>
            <!--分割线-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f5f5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tx_yunyingshang"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="运营商名字"
                    android:gravity="center"
                    android:textColor="#000000"/>
                <EditText
                    android:id="@+id/edt_yunyingshang"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text=""
                    android:gravity="center"
                    android:background="@null"
                    android:hint="运营商名字"
                    android:maxLines="1"/>
            </LinearLayout>
            <!--分割线-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f5f5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tx_yunyingshang0"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="运营商名字"
                    android:gravity="center"
                    android:textColor="#000000"/>
                <EditText
                    android:id="@+id/edt_yunyingshang0"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text=""
                    android:gravity="center"
                    android:background="@null"
                    android:hint="运营商名字"
                    android:maxLines="1"/>
            </LinearLayout>
            <!--分割线-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f5f5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tx_yunyingshang1"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="运营商名字"
                    android:gravity="center"
                    android:textColor="#000000"/>
                <EditText
                    android:id="@+id/edt_yunyingshang1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text=""
                    android:gravity="center"
                    android:background="@null"
                    android:hint="运营商名字"
                    android:maxLines="1"/>
            </LinearLayout>
            <!--分割线-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f5f5"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp">
                <Button
                    android:id="@+id/btn_device_info_get_random"
                    android:background="@drawable/button_shape"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="随机生成"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="20dp"/>
                <Button
                    android:id="@+id/btn_device_info_save"
                    android:background="@drawable/button_shape"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="保存"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
            <!--分割线-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f5f5"/>
            </LinearLayout>
    </ScrollView>

</LinearLayout>
