<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddffffff"
    android:orientation="vertical">
    <!--标题栏-->
    <com.mero.wyt_register.widget.CustomTitleBar
        android:id="@+id/title_bar_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text="设置"
        app:textSize="20sp"
        app:textColor="#FFF">
    </com.mero.wyt_register.widget.CustomTitleBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#f5f5f5"
        android:layout_marginTop="20dp">
        <!--每一个设置选项-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c0c0c0"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tx_setting_show_item1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="自动修改"
                android:maxLines="1"
                android:textColor="#000"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"/>
            <com.mero.wyt_register.widget.SwitchButton
                android:id="@+id/switch_btn_auto_change"
                android:layout_toRightOf="@id/tx_setting_show_item1"
                style="@style/SwitchButtonMD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="230dp"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#f5f5f5">
        <!--每一个设置选项-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c0c0c0"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tx_setting_show_item2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="开启通知"
                android:maxLines="1"
                android:textColor="#000"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"/>
            <com.mero.wyt_register.widget.SwitchButton
                android:id="@+id/switch_btn_open_notify"
                android:layout_toRightOf="@id/tx_setting_show_item2"
                style="@style/SwitchButtonMD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="230dp"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
